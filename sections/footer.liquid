<footer class="footer_sec">
  <div class="container">
    <div class="wrap">
      <div class="footer_bl">
        {%- if section.blocks.size == 0 -%}
          <li>
            <a href="#">Guides</a>
          </li>
          <li>
            <a href="#">Terms of Sale</a>
          </li>
          <li>
            <a href="#">Terms of Use</a>
          </li>
          <li>
            <a href="#">Privacy Policy</a>
          </li>
          <li>
            <a href="#">Terms of Use</a>
          </li>
          <li>
            <a href="#">Privacy Policy</a>
          </li>
          <li>
            <a href="#">Guides</a>
          </li>
          <li>
            <a href="#">Terms of Sale</a>
          </li>
        {% else %}
          {% for block in section.blocks %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
              </li>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
  }

  .footer_bl {
    display: grid;
    padding: 20px 0;
    grid-template-columns: repeat(4, 1fr);

    @media only screen and (max-width: 576px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer_bl li {
    display: inline-flex;
    margin: 10px;
  }

  .footer_bl a {
    text-decoration: none;
    color: white;
  }

  .footer_bl a:hover {
    color: rgb(207, 207, 207);
  }
</style>

{% schema %}
{
  "name": "Footer",
  "class": "footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": []
}

{% endschema %}