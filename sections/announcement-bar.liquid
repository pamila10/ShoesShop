{%- if section.settings['show_announcement'] -%}
  <section class="announcementBar_sec">
    <div class="container">
      <div class="wrap">
        <div class="announcementBar_bl">
          {%- if section.settings.image != blank -%}
            {% assign image = section.settings.image | image_url %}
          {%- else -%}
            {% assign image = 'logo.png' | asset_url %}
          {%- endif -%}

          <a href="/">
            <img 
              width="40px"
              height="40px"
              loading="lazy"
              src="{{ image }}"
            >
          </a>
        </div>
        <div class="announcementBar_bl">
          <ul class="announcementBar_list">
            {%- if section.blocks.size == 0 -%}
              <li>
                <a class="link" href="#">Help</a>
              </li>

              {%- if shop.customer_accounts_enabled and customer -%}
                <li>
                  <a class="link" href="/account">Account</a>
                </li>

              {%- else -%}
                <li>
                  <a class="link" href="/account/login">Sign in</a>
                </li>
            {%- endif -%}

            {%- else -%}
              {%- for block in section.blocks -%}
                <li>
                  <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
                </li>
              {%- endfor -%}
            {%- endif -%}
          </ul>
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

<style>
  .announcementBar_sec {
    background: {{ section.settings.background}};
    color: {{ section.settings.text_color }};
  }

  .announcementBar_sec .wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3px 0;
  }

  .announcementBar_list {
    display: flex;
    justify-content: space-between;
    list-style-type: none;
    gap: 10px;
    font-size: 1.3rem;
    padding: 3px 0;
    margin: 0;
  }

  .announcementBar a:hover {
    color: rgb(60, 60, 60);
  }
</style>

{% schema %}
{
  "name": "Announcement bar",
  "class": "announcementBar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Pick image",
      "info": "Png recommended format"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "name": "links",
      "type": "links",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": []
}
{% endschema %}
